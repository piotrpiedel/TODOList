<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/category_title"
        style="@style/TextView.CategoryItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/category_button_delete"
        android:layout_alignBottom="@+id/category_button_delete"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/category_title_margin_start"
        android:textSize="@dimen/category_title_text_size"
        tools:text="Very long text to fit in"/>

    <Button
        android:id="@+id/category_button_delete"
        style="@style/TextView.CategoryItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/delete"
        tools:text="@string/delete" />

</RelativeLayout>
